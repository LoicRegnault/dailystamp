<% title "Customize Stamp" %>
<% stylesheet "edit_stamp" %>
<% javascript "edit_stamp" %>

<% form_for @stamp do |f| %>
  <%= f.error_messages %>
  <p><%= f.text_field :name %></p>
  <p><%= f.check_box :private %> <%= f.label :private, "Keep this stamp private" %></p>
  
  <div id="colors">
    <% for color in STAMP_COLORS %>
      <div class="color">
        <%= label_tag "stamp_color_#{color}", image_tag("stamper/#{color}/ready.png", :size => "87x114", :alt => color) %>
        <div class="radio_button"><%= f.radio_button :color, color %></div>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>
  
  <% if current_user %>
  <div id="stamp_images">
    <% for stamp_image in current_user.stamp_images %>
      <div class="stamp_image">
        <%= label_tag "stamp_stamp_image_id_#{stamp_image.id}", image_tag(stamp_image.photo.url(@stamp.color), :size => "70x70") %>
        <div class="radio_button"><%= f.radio_button :stamp_image_id, stamp_image.id %></div>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>
  <% end %>
  
  <p><%= f.submit "Submit" %> or <%= link_to "cancel", @stamp %></p>
<% end %>
